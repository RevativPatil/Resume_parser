modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tesseract", "tk", "zlib"]

[userenv]

[userenv.shared]
DATABASE_URL = "sqlite:///./resume_parser.db"
GROQ_MODEL = "llama-3.3-70b-versatile"
DEBUG = "True"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Resume Parser"

[[workflows.workflow]]
name = "Start Resume Parser"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35981
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]
